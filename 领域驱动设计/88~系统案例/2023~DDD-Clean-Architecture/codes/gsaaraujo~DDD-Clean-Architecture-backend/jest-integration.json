{
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".integration.spec.ts$",
  "moduleFileExtensions": ["js", "json", "ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@core/(.*)": "<rootDir>/src/modules/core/$1",
    "@agreements/(.*)": "<rootDir>/src/modules/agreements/$1"
  }
}
